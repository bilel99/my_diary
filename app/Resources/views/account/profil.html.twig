{% extends 'layout/base.html.twig' %}
{% block body %}

    <div class="container" style="margin-top: 90px">
        <div class="row">
            <div class="col-md-4 col-md-offset-1">
                <p>
                    Vous voila sur votre profil, vous pouvez modifier vos information à votre guise !
                </p>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Votre Profil</strong></h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="btn btn-primary col-md-4 col-md-offset-4">Valider</button>
                        {{ form_end(form) }}
                        <div class="space"></div>
                    </div>
                </div>
            </div>



            <div class="col-md-4 col-md-offset-1 user-details">
                <div class="user-image">
                    <img src="{{ app.request.basepath }}/uploads/{{ users.filename }}" alt="your profil image" title="your profil image" class="img-circle" width="220">
                </div>
                <div class="user-info-block">
                    <div class="user-heading">
                        <h3>{{ users.pseudo }}</h3>
                        <span class="help-block">Ville ici, Pays ici</span>
                    </div>
                    <ul class="navigation">
                        <li class="active">
                            <a>
                                <span class="fa fa-user fa-2x"></span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('changePassword', {'id':app.session.get('users').id}) }}">
                                <span class="fa fa-key fa-2x"></span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('deleteUser', {'id':app.session.get('users').id}) }}">
                                <span class="fa fa-trash fa-2x"></span>
                            </a>
                        </li>
                    </ul>
                    <div class="user-body">
                        <div class="tab-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul>
                                        <li>pseudo:</li>
                                        <li>email:</li>
                                        <li>date_naissance:</li>
                                        <li>Créer le:</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li>{{ users.pseudo }}</li>
                                        <li>{{ users.email }}</li>
                                        <li>{{ users.dateNaissance|date('d/m/Y') }}</li>
                                        <li>{{ users.createdAt|date('d/m/Y') }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}