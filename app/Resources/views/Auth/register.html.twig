{% extends 'layout/base.html.twig' %}
{% block body %}

    <div class="container" style="margin-top: 90px">
        <p class="col-md-4 col-md-offset-4">
            Merci de remplir les champs suivant pour vous inscrire au site!
        </p>
        <div class="row">

            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Inscription</strong></h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="btn btn-primary col-md-4 col-md-offset-4">M'inscrire</button>
                        {{ form_end(form) }}
                        <div class="space"></div>
                        <ul>
                            <li><a href="{{ path('login') }}">Connection</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}