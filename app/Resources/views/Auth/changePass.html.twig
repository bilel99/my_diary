{% extends 'layout/base.html.twig' %}
{% block body %}

    <div class="container" style="margin-top: 90px">
        <p class="col-md-4 col-md-offset-4">
            {{ 'changePassword_title'|trans }}
        </p>
        <div class="row">

            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>{{ 'changePass_panel'|trans }}</strong></h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-primary col-md-4 col-md-offset-4">{{ 'changePass_btn_register'|trans }}</button>
                        {{ form_end(form) }}
                        <div class="space"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}