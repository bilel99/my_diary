{% extends 'admin/layout/base.html.twig' %}
{% block body %}

    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
        <!-- Right -->
        <strong><span class="fa fa-tag"></span>&nbsp; {{ 'gestion_categorie'|trans }}</strong>
        <hr>

        <div class="panel panel-default filterable">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'categorie'|trans }}</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span>&nbsp;{{ 'filter'|trans }}</button>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="{{ 'id_sharp'|trans }}" disabled></th>
                    <th><input type="text" class="form-control" placeholder="{{ 'langue_id'|trans }}" disabled></th>
                    <th><input type="text" class="form-control" placeholder="{{ 'nom'|trans }}" disabled></th>
                    <th><input type="text" class="form-control" placeholder="{{ 'createdAt'|trans }}" disabled></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for row in categorie %}
                    <tr>
                        <td>{{ row.getId() }}</td>
                        <td>{{ row.getLangue().getName() == null ? 'NULL' : row.getLangue().getName() }}</td>
                        <td>{{ row.getNom() }}</td>
                        <td>{{ row.getCreatedAt|date('d/m/Y') }}</td>
                        <td>
                            <div id="deleteCategorie_{{ row.id }}" class="deleteCategorie" data-id="{{ row.id }}">
                                <form action="{{ url('admin.categorie.destroy', {'id':row.id}) }}" method="POST" accept-charset="UTF-8" id="form_categorie_destroy">
                                    <a href="#" class="btn-remove-categorie">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}